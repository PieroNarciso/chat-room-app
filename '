<template>
  <div class="d-grid" :class="clsPos">
    <div><em>{{ message.user.username }}</em></div>
    <div :class="clsColor" class="py-1 px-3 other-message">
      {{ message.msg }}
    </div>
  </div>
</template>

<script lang="ts">
import { computed, defineComponent, PropType } from 'vue';
import { Message } from '@/types';

export default defineComponent({
  props: {
    message: {
      type: Object as PropType<Message>,
      required: true,
    },
    currentUserId: {
      type: Number,
      required: true,
    },
  },
  setup(props) {
    const selfMessage = computed(() => props.message.user.id === props.currentUserId);

    const clsColor = computed(() => {
      console.log(selfMessage);
      if (selfMessage.value) {
        return [
          'list-group-item-success',
          'self-message',
        ];
      }
      return [
        'list-group-item-primary',
        'other-message',
      ];
    });

    const clsPos = computed(() => {
      if (selfMessage.value) {
        return 'self-position';
      }
      return 'other-position';
    });

    return {
      clsColor,
      clsPos,
    };
  },
});
</script>

<style lang="scss" scoped>
.self-message {
  border-radius: 14px 14px 0 14px;
}

.other-message {
  border-radius: 14px 14px 14px 0;
}

.self-position {
  justify-content: end;
  justify-items: end;
}

.other-position {
  justify-content: start;
  justify-items: start;
}
</style>
